<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/imagempb"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/maccaphusocola"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/namempb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Macca phủ Socola"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/giampb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="45.000 đ"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/yeuthich"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Yêu thích"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:drawableStart="@drawable/ic_favorite_border"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giới thiệu món"
            android:textSize="22dp"
            android:textColor="#000000"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#FAFAFA"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Socola thơm lừng bao bọc hạt Macca bùi ngon thiệt ngon-món ăn vặt đắng nhẹ, ngọt ngào không thể thiếu cho mùa Giáng Sinh ấm áp, cắn 1 miếng là mê ngay và nhâm nhi với món nước nào cũng hợp đấy"
            android:textSize="18dp"
            android:background="#ffffff"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#000000"
            android:paddingRight="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="10dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_remove_circle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="27dp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#000000"/>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_add_circle"/>

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_toanphan"
                android:text="38.000 đ"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"/>



        </LinearLayout>



    </LinearLayout>
</LinearLayout>