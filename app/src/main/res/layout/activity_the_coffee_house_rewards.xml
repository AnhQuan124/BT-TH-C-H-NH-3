<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f1eff4"
    tools:context=".TaiKhoan.TheCoffeeHouseRewardsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/backndp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin thành viên"
            android:layout_gravity="center"
            android:layout_marginLeft="75dp"
            android:textColor="#000000"
            android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/pannername"/>

        <LinearLayout
            android:id="@+id/noidung1_118"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_bk"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/hatcaphe"
                    android:layout_gravity="center"
                    android:layout_marginLeft="80dp"/>
                <View
                    android:layout_width="3dp"
                    android:layout_height="80dp"
                    android:background="#D5D4D8"
                    android:layout_gravity="center"
                    android:layout_marginLeft="80dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="18dp"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ưu đãi"
                        android:layout_marginTop="5dp"
                        android:drawableEnd="@drawable/ic_navigate_next"/>

                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#D5D4D8"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lịch sử BEAN thường"
                android:drawableEnd="@drawable/ic_navigate_next"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:paddingTop="10dp"
                android:textSize="18dp"
                android:textColor="#000000"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#D5D4D8"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tìm hiểu chương trình"
                android:drawableEnd="@drawable/ic_navigate_next"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:paddingTop="10dp"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginBottom="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_bk"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bạn đang là thành viên mới"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:textSize="18dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chưa tích điểm"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:paddingTop="10dp"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_marginBottom="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_bk"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/loaihang"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bạn đã đạt hạng mới"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:paddingTop="5dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đổi quà không ảnh hưởng tới việc tăng hạn"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="14dp"
                android:textColor="@color/orange"
                android:layout_marginBottom="10dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#D5D4D8"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <TextView
                android:drawableStart="@drawable/ic_local_drink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ưu đãi nâng size đầu tiên sau đơn đầu tiên"
                android:textColor="#000000"
                android:layout_margin="20dp"
                android:gravity="center"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>